<!-- Custom scripts for this page -->
<!-- Custom scripts for this page -->
<script>
    $(document).ready(function() {
        $.ajax({
            url: '@Url.Action("PostViews", "Posts")',
            type: 'GET',
            success: function(data) {
                var ctx = document.getElementById('postViewsPieChart').getContext('2d');
                var postViewsPieChart = new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: data.slice(0, 3).map(post => post.Title),
                        datasets: [{
                            label: 'Views',
                            data: data.slice(0, 3).map(post => post.ViewCount),
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.5)',
                                'rgba(54, 162, 235, 0.5)',
                                'rgba(255, 206, 86, 0.5)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        responsive: true
                    }
                });
            }
        });
    });
</script>
<!-- Add CSS to ensure the chart fits within the card -->
<style>
    .chart-pie {
        position: relative;
        height: 400px; /* Adjust the height as needed */
        width: 100%;
    }
</style>