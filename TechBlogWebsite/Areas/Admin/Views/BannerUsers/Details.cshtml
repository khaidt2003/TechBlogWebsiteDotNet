@model TechBlogWebsite.Models.BannerUser

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<div class="container">
    <h2 class="text-center">Banner User Details</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Banner Image</h4>
                </div>
                <div class="card-body">
                    <img src="@Model.BannerImage" class="img-fluid" alt="Banner Image">
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Meta:</dt>
                        <dd class="col-sm-8">@Model.Meta</dd>

                        <dt class="col-sm-4">Hide:</dt>
                        <dd class="col-sm-8">@Model.Hide</dd>

                        <dt class="col-sm-4">Order:</dt>
                        <dd class="col-sm-8">@Model.Order</dd>

                        <dt class="col-sm-4">Date Begin:</dt>
                        <dd class="col-sm-8">@Model.DateBegin</dd>

                        <dt class="col-sm-4">Username:</dt>
                        <dd class="col-sm-8">@Model.User.Username</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <a href="@Url.Action("Edit", new { id = Model.BannerID })" class="btn btn-primary">Edit</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
