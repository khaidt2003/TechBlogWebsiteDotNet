@model TechBlogWebsite.Models.SubMenu

@{
    ViewBag.Title = "SubMenu Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<style>
    .container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .card {
        width: 100%;
    }

    .card-header {
        background-color: #007bff;
        color: white;
    }

    .card-body {
        font-size: 1.2rem;
    }

    .card-title {
        font-size: 1.4rem;
    }

    .col-sm-3 {
        color: #007bff;
    }

    .dl-horizontal dt {
        width: 180px; /* Adjust width as needed */
        font-weight: bold;
    }

    .dl-horizontal dd {
        margin-left: 200px; /* Adjust margin as needed */
    }

    .detail-label {
        font-weight: bold;
        color: #007bff; /* Primary color from Bootstrap */
    }
</style>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center mb-0">SUBMENU DETAILS</h2>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.name):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.name)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.link):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.link)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.meta):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.meta)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.hide):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.hide)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.order):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.order)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.datebegin):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.datebegin)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.menu.name):</span> (Parent Menu)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.menu.name)
                </dd>
            </dl>

            <div class="text-center mt-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.SubMenuID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
