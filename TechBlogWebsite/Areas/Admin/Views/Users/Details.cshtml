@model TechBlogWebsite.Models.User

@{
    ViewBag.Title = "User Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<style>
    /* Sử dụng Grid để bố cục */
    .container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .card {
        width: 100%;
    }

    .card-header {
        background-color: #007bff;
        color: white;
    }

    .card-body {
        font-size: 1.2rem;
    }

    .card-title {
        font-size: 1.4rem;
    }

    dt {
        color: #007bff; /* Màu xanh dương nổi bật */
    }
</style>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center mb-0">USER DETAILS</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Username:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">First Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-4">Last Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-4">Avatar:</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.Avatar))
                    {
                        <img src="@Url.Content("~/Content/upload/" + Model.Avatar)" alt="Avatar" class="img-fluid" style="max-width: 200px;">
                    }
                </dd>

                <dt class="col-sm-4">Bio:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Bio)</dd>

                <dt class="col-sm-4">Active:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IsActive)</dd>

                <dt class="col-sm-4">Link:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Link)</dd>

                <dt class="col-sm-4">Meta:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Meta)</dd>

                <dt class="col-sm-4">Hide:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Hide)</dd>

                <dt class="col-sm-4">Order:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Order)</dd>

                <dt class="col-sm-4">Date Begin:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DateBegin)</dd>

                <dt class="col-sm-4">Role:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Role.Name)</dd>
            </dl>
        </div>
        <div class="card-footer text-muted text-center">
            @Html.ActionLink("Edit", "Edit", new { id = Model.UserID }, new { @class = "btn btn-primary mr-3" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
