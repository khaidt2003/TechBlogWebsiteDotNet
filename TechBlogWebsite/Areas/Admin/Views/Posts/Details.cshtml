@using TechBlogWebsite.Help;
@model TechBlogWebsite.Models.Post

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>Post Details</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">Content</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                <dt class="col-sm-3">Published Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PublishedDate)</dd>

                <dt class="col-sm-3">Modified Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ModifiedDate)</dd>

                <dt class="col-sm-3">Tags</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tags)</dd>

                <dt class="col-sm-3">Featured Image</dt>
                <dd class="col-sm-9">
                    <img src="@Url.Content("~/images/" + Model.FeaturedImage)" alt="Featured Image" class="img-fluid">
                </dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-3">View Count</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ViewCount)</dd>

                <dt class="col-sm-3">Link</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Link)</dd>

                <dt class="col-sm-3">Meta</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Meta)</dd>

                <dt class="col-sm-3">Visibility</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Hide)</dd>

                <dt class="col-sm-3">Order</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Order)</dd>

                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DateBegin)</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>

                <dt class="col-sm-3">Author</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Username)</dd>
            </dl>
        </div>
        <div class="card-footer text-muted">
            <a href="@Url.Action("Edit", "Posts", new { id = Model.PostID })" class="btn btn-success">Edit</a>
            <a href="@Url.Action("Index", "Posts")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
