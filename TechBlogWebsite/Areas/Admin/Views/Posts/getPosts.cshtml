@using TechBlogWebsite.Help;
@model IEnumerable<TechBlogWebsite.Models.Post>


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css"></script>
<style>
    /* Điều chỉnh chiều rộng cột */
    .col-title {
        width: 20%;
    }

    .col-date {
        width: 10%;
    }

    .col-status {
        width: 10%;
    }

    .col-views {
        width: 10%;
    }

    .col-actions {
        width: 20%;
    }
    /* Căn giữa ảnh trong các ô bảng */
    table td img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        vertical-align: middle;
    }

    /* Cột cho các nút hành động */
</style>

<div class="card shadow mb-4">
    <div class="card-header py-3" style="background-color: #4e73df; color: white;">
        <h6 class="m-0 font-weight-bold">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th class="col-title">@Html.DisplayNameFor(model => model.Title)</th>
                        <th class="col-date">@Html.DisplayNameFor(model => model.PublishedDate)</th>
                        <th class="col-date">@Html.DisplayNameFor(model => model.ModifiedDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Tags)</th>
                        <th>@Html.DisplayNameFor(model => model.FeaturedImage)</th>
                        <th class="col-status">@Html.DisplayNameFor(model => model.Status)</th>
                        <th class="col-views">@Html.DisplayNameFor(model => model.ViewCount)</th>
                        <th>@Html.DisplayNameFor(model => model.Link)</th>
                        <th>@Html.DisplayNameFor(model => model.Meta)</th>
                        <th class="col-actions"></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.PublishedDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.ModifiedDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tags)</td>
                            <td><img src="~/Content/upload/@item.FeaturedImage" alt="Image" style="width:100px; height:auto;" /></td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>@Html.DisplayFor(modelItem => item.ViewCount)</td>
                            <td>@Html.DisplayFor(modelItem => item.Link)</td>
                            <td>@Html.DisplayFor(modelItem => item.Meta)</td>
                            <td class="col-actions">
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="@Url.Action("Edit", "Posts", new { id = item.PostID })" class="btn btn-sm btn-warning"><i class="fas fa-pencil-alt"></i> Edit</a>
                                    <a href="@Url.Action("Details", "Posts", new { id = item.PostID })" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i> Detail</a>
                                    <a href="@Url.Action("Delete", "Posts", new { id = item.PostID })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Delete</a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            responsive: true,
            search: true,
            paging: true,
            pageLength: 11,
            columnDefs: [
                { targets: 0, width: '20%' },
                { targets: [1, 2], width: '10%' },
                { targets: 5, width: '10%' },
                { targets: 6, width: '10%' },
                { targets: 9, width: '20%' },
            ]
        });
    });
</script>

