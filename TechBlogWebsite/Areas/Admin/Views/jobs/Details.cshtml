@model TechBlogWebsite.Models.job

@{
    ViewBag.Title = "Job Posting Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}

<style>
    .container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .card {
        width: 100%;
    }

    .card-header {
        background-color: #007bff;
        color: white;
    }

    .card-body {
        font-size: 1.2rem;
    }

    .card-title {
        font-size: 1.4rem;
    }

    .col-sm-3 {
        color: #007bff;
    }

    .dl-horizontal dt {
        width: 180px; /* Adjust width as needed */
        font-weight: bold;
    }

    .dl-horizontal dd {
        margin-left: 200px; /* Adjust margin as needed */
    }

    .detail-label {
        font-weight: bold;
        color: #007bff; /* Primary color from Bootstrap */
    }
</style>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center mb-0">JOB POSTING DETAILS</h2>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.company_name):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.company_name)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.full_name):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.full_name)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.current_position):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.current_position)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.email):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.email)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.phone):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.phone)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.how_heard):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.how_heard)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.job_description):</span>
                </dt>
                <dd class="job-description-display">
                    @Html.DisplayFor(model => model.job_description)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.is_posted):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.is_posted)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.created_at):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.created_at)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.User.Username):</span> (Posted By)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.User.Username)
                </dd>
            </dl>

            <div class="text-center mt-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
