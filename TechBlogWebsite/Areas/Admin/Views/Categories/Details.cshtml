@model TechBlogWebsite.Models.Category
@{
    ViewBag.Title = "Category Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage1.cshtml";
}
<style>
    .container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .card {
        width: 100%;
    }

    .card-header {
        background-color: #007bff;
        color: white;
    }

    .card-body {
        font-size: 1.2rem;
    }

    .card-title {
        font-size: 1.4rem;
    }

    .col-sm-3 {
        color: #007bff;
    }

    .dl-horizontal dt {
        width: 180px; /* Adjust width as needed */
        font-weight: bold;
    }

    .dl-horizontal dd {
        margin-left: 200px; /* Adjust margin as needed */
    }

    .detail-label {
        font-weight: bold;
        color: #007bff; /* Primary color from Bootstrap */
    }
</style>
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center mb-0">CATEGORY DETAILS</h2>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Name):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Description):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Link):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Link)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Meta):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Meta)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Hide):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Hide)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Order):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Order)
                </dd>

                <dt>
                    <span class="detail-label">@Html.DisplayNameFor(model => model.DateBegin):</span>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DateBegin)
                </dd>

                @if (Model.Category1 != null) // Check if there's a parent category
                {
                    <dt>
                        <span class="detail-label">@Html.DisplayNameFor(model => model.Category1.Name):</span> (Parent Category)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Category1.Name)
                    </dd>
                }
            </dl>

            <div class="text-center mt-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
