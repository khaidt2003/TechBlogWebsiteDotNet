                                            @{Html.RenderAction("GetPopularPostsOfScience", "Temp");}
                                        </div>
                                        <div id="cat02" class="tabcontent" style="background-color: #fff;">
                                            @{Html.RenderAction("GetPopularPostsOfTechnology", "Temp");}
                                        </div>

                                    </div><!-- end tab-details -->
                                </div><!-- end mega-menu-content -->
                            </div>
                        </li>
                    </ul>
                </li>
            }

            else
            {
                <li class="nav-item">

                    <a class="nav-link" href="/@i.meta">@i.name</a>
                </li>

            }
        }
