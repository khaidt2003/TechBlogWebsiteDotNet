
@model IEnumerable<TechBlogWebsite.Models.menu>
<div class="collapse navbar-collapse" id="navbarCollapse">
    <ul class="navbar-nav mr-auto">
        @foreach (var i in Model)
        {
            if (i.SubMenus != null && i.order == 1)
            {
                <li class="nav-item dropdown has-submenu menu-large hidden-md-down hidden-sm-down hidden-xs-down">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">News</a>
                    <ul class="dropdown-menu megamenu" aria-labelledby="dropdown01">
                        <li>
                            <div class="container">
                                <div class="mega-menu-content clearfix">
                                    <div class="tab">
                                        <button class="tablinks active" onclick="openCategory(event, 'cat01')">Science</button>
                                        <button class="tablinks" onclick="openCategory(event, 'cat02')">Technology</button>
                                    </div>

                                    <div class="tab-details clearfix" style="background-color: #edeff2;">
                                        <div id="cat01" class="tabcontent active" style="background-color: #fff;">
                                            @{Html.RenderAction("GetPopularPostsOfScience", "Temp");}
                                        </div>
                                        <div id="cat02" class="tabcontent" style="background-color: #fff;">
                                            @{Html.RenderAction("GetPopularPostsOfTechnology", "Temp");}
                                        </div>

                                    </div><!-- end tab-details -->
                                </div><!-- end mega-menu-content -->
                            </div>
                        </li>
                    </ul>
                </li>
            }

            else
            {
                <li class="nav-item">

                    <a class="nav-link" href="/@i.meta">@i.name</a>
                </li>

            }
        }
